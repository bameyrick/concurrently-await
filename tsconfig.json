{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": false,
    "moduleResolution": "node",
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["esnext", "DOM"]
  },
  "include": ["src/**/*"]
}
